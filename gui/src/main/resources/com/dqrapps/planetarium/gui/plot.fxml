<AnchorPane fx:id="rootPane" prefHeight="648.0" prefWidth="882.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dqrapps.planetarium.gui.plot.PlotController">
   <children>
      <Pane fx:id="canvasPane" layoutY="-2.0" prefHeight="600.0" prefWidth="882.0" style="-fx-background-color: rgb(0, 0, 35);" AnchorPane.bottomAnchor="48.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Canvas fx:id="starCanvas" height="600.0" width="882.0" />
         </children>
      </Pane>
      <ToolBar id="plotToolbar" layoutY="600.0" prefHeight="48.0" prefWidth="882.0" style="-fx-background-color: midnightblue;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <items>
          <Button id="configBtnId" fx:id="configButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#switchToConfig" text="Config" />
          <Button id="exportBtnId" fx:id="exportButton" mnemonicParsing="false" onAction="#exportScreenshot" prefHeight="26.0" prefWidth="70.0" text="Export" />
          <Button id="gridBtnId" fx:id="gridButton" mnemonicParsing="false" onAction="#toggleGrid" prefHeight="26.0" prefWidth="50.0" text="Grid" />
          <Button id="dsoBtn" fx:id="dsoButton" mnemonicParsing="false" onAction="#toggleDeepSky" prefHeight="26.0" prefWidth="60.0" text="DSO" />
          <Button id="planetsBtn" fx:id="planetsButton" mnemonicParsing="false" onAction="#togglePlanets" prefHeight="26.0" prefWidth="70.0" text="Planets" />
          <Button id="sunBtn" fx:id="sunButton" mnemonicParsing="false" onAction="#toggleSun" prefHeight="26.0" prefWidth="50.0" text="â˜€ Sun" />
          <Button id="moonBtn" fx:id="moonButton" mnemonicParsing="false" onAction="#toggleMoon" prefHeight="26.0" prefWidth="60.0" text="ðŸŒ™ Moon" />
          <Button id="catalogSelectBtnId" fx:id="catalogSelectButton" mnemonicParsing="false" onAction="#selectCatalog" prefHeight="26.0" prefWidth="80.0" text="Catalog..." />
          <Region HBox.hgrow="ALWAYS" />
          <HBox spacing="5.0" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search star..." prefWidth="150.0" onAction="#searchStar" />
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchStar" prefHeight="26.0" prefWidth="60.0" text="Find" />
            <Button fx:id="clearSearchButton" mnemonicParsing="false" onAction="#clearSearch" prefHeight="26.0" prefWidth="50.0" text="Clear" />
          </HBox>
          <Region HBox.hgrow="ALWAYS" />
          <VBox spacing="2.0" alignment="CENTER" prefWidth="150.0">
            <HBox spacing="5.0" alignment="CENTER">
              <Label fx:id="speedLabel" text="Speed: 60x" style="-fx-text-fill: white;" />
            </HBox>
            <Slider fx:id="speedSlider" min="1" max="1440" value="60" prefWidth="140.0"
                    blockIncrement="10" majorTickUnit="100" minorTickCount="10" snapToTicks="false" />
          </VBox>
          <HBox spacing="5.0" alignment="CENTER_RIGHT">
            <Button fx:id="setTimeButton" mnemonicParsing="false" onAction="#showDateTimePicker" prefHeight="26.0" prefWidth="80.0" text="Set Time..." />
            <Button fx:id="playButton" mnemonicParsing="false" onAction="#toggleTimeAnimation" prefHeight="26.0" prefWidth="60.0" text="Play" />
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetTime" prefHeight="26.0" prefWidth="60.0" text="Reset" />
          </HBox>
          <Button id="exitBtnId" fx:id="exitButton" mnemonicParsing="false" onAction="#exit" prefHeight="26.0" prefWidth="50.0" text="Exit" />
        </items>
      </ToolBar>
   </children>
</AnchorPane>
