<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dqrapps.planetarium.gui.config.ConfigController">
    <children>
        <Label text="Configuration">
         <font>
            <Font size="28.0" />
         </font></Label>
      <Pane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Group fx:id="longitudeField">
               <children>
                  <Label prefWidth="326.0" text="Longitude">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField layoutX="74.0" layoutY="-3.0" prefHeight="26.0" prefWidth="70.0" />
                  <Label layoutX="150.0" layoutY="1.0" text="Degrees">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField layoutX="224.0" layoutY="-3.0" prefHeight="26.0" prefWidth="32.0" />
                  <Label layoutX="267.0" layoutY="2.0" text="Minutes">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </Group>
         </children>
      </Pane>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button mnemonicParsing="false" text="Save" />
            <Button mnemonicParsing="false" text="New" />
            <MenuButton mnemonicParsing="false" text="Load">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
            </MenuButton>
            <Button fx:id="secondaryButton1" onAction="#switchToPlot" text="Quit" />
        </buttons>
      </ButtonBar>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
